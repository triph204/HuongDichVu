@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giỏ Hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/cart.css">
</head>
<body>
    <!-- Header -->
    <header class="header-top">
        <div class="container">
            <div class="row align-items-center py-3">
                <div class="col-3">
                    <a href="/" class="btn btn-outline-danger">
                        <i class="fas fa-arrow-left"></i>
                        <span class="d-none d-md-inline ms-1">Quay lại</span>
                    </a>
                </div>
                <div class="col-6 text-center">
                    <h4 class="mb-0 text-danger">
                        <i class="fas fa-shopping-cart"></i>
                        Giỏ Hàng
                    </h4>
                </div>
                <div class="col-3">
                </div>
            </div>
        </div>
    </header>

    <!-- Cart Content -->
    <main class="container my-4 pb-5 mb-5">
        <!-- Thông tin bàn -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-danger text-white rounded-circle p-3 me-3">
                        <i class="fas fa-chair fa-2x"></i>
                    </div>
                    <div>
                        <h3 class="mb-0 text-danger" id="tableNumber">--</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Danh sách món -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="fas fa-list"></i>
                    Món đã chọn
                    <span class="badge bg-danger ms-2" id="itemCount">0</span>
                </h5>
            </div>
            <div class="card-body p-0">
                <div id="cartItemsList">
                    <!-- Danh sách món sẽ được render bằng JS -->
                </div>
            </div>
        </div>

        <!-- Ghi chú -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="fas fa-comment-dots"></i>
                    Ghi chú
                </h5>
            </div>
            <div class="card-body">
                <textarea id="orderNote"
                          class="form-control"
                          rows="3"
                          placeholder="Ghi chú cho đơn hàng (không bắt buộc)..."></textarea>
                <small class="text-muted">Ví dụ: Không hành, ít cay, thêm nước chấm...</small>
            </div>
        </div>

        <!-- Tổng tiền -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Tạm tính</span>
                    <strong id="subtotal">0₫</strong>
                </div>
                <hr>
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Tổng cộng</h5>
                    <h4 class="mb-0 text-danger" id="totalAmount">0₫</h4>
                </div>
            </div>
        </div>

        <!-- Nút gửi đơn -->
        <div class="d-grid gap-2">
            <button id="submitOrderBtn" class="btn btn-danger btn-lg py-3" onclick="submitOrder()">
                <i class="fas fa-paper-plane me-2"></i>
                Gửi đơn hàng
            </button>
            <button class="btn btn-outline-secondary" onclick="window.location.href='/'">
                <i class="fas fa-plus me-2"></i>
                Thêm món
            </button>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="fas fa-utensils"></i> Nhà Hàng Ngon</h5>
                    <p class="text-muted">Mang đến cho bạn những món ăn ngon nhất với chất lượng tốt nhất.</p>
                </div>
                <div class="col-md-4">
                    <h5>Liên hệ</h5>
                    <p class="text-muted mb-1"><i class="fas fa-phone"></i> 0123 456 789</p>
                    <p class="text-muted mb-1"><i class="fas fa-envelope"></i> contact@nhahangngon.vn</p>
                    <p class="text-muted"><i class="fas fa-map-marker-alt"></i> Hà Nội, Việt Nam</p>
                </div>
                <div class="col-md-4">
                    <h5>Giờ mở cửa</h5>
                    <p class="text-muted mb-1">Thứ 2 - Thứ 6: 8:00 - 22:00</p>
                    <p class="text-muted">Thứ 7 - CN: 7:00 - 23:00</p>
                </div>
            </div>
            <hr class="my-3">
            <div class="text-center text-muted">
                <p class="mb-0">© 2024 Nhà Hàng Ngon. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Mobile Bottom Nav -->
    <nav class="mobile-nav">
        <button class="nav-item" onclick="window.location.href='/'">
            <i class="fas fa-home"></i>
            <span>Thực đơn</span>
        </button>
        <button class="nav-item" onclick="window.location.href='/Order'">
            <i class="fas fa-receipt"></i>
            <span>Đơn hàng</span>
        </button>
    </nav>

   <!-- Modal xác nhận - SỬA DÒNG NÀY -->
<div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="fas fa-check-circle text-success"></i>
                    Xác nhận đơn hàng
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <i class="fas fa-utensils fa-4x text-danger mb-3"></i>
                <h4>Gửi đơn hàng?</h4>
                <!-- ⚠️ THÊM ID VÀO ĐÂY -->
                <p class="text-muted mb-0">
                    Bạn có chắc chắn muốn gửi đơn hàng cho
                    <strong id="confirmTableName"></strong>?
                </p>
                <p class="text-muted mt-2" id="confirmCartInfo"></p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger" onclick="confirmSubmit()">
                    <i class="fas fa-paper-plane me-1"></i>
                    Xác nhận
                </button>
            </div>
        </div>
    </div>
</div>

    <!-- Modal thành công - ĐÃ SỬA -->
<div class="modal fade" id="successModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center py-5">
                <i class="fas fa-check-circle fa-5x text-success mb-3"></i>
                <h3 class="text-success mb-3">Đặt hàng thành công!</h3>
                
                <!-- ⚠️ THÊM ID VÀO ĐÂY -->
                <p class="text-muted mb-2" id="successMessage">
                    Đơn hàng của bạn đã được gửi đến nhà bếp.
                </p>
                
                <!-- ⚠️ THÊM THÔNG TIN BÀN VÀ THỜI GIAN -->
                <p class="text-muted mb-2">
                    Bàn: <strong id="orderTableName"></strong>
                </p>
                <p class="text-muted mb-4">
                    Thời gian: <span id="orderTime"></span>
                </p>
                
                <button type="button" class="btn btn-danger" onclick="window.location.href='/'">
                    <i class="fas fa-home me-1"></i>
                    Về trang chủ
                </button>
            </div>
        </div>
    </div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/cart.js"></script>
</body>
</html>