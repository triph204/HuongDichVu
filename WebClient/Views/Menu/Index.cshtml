@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tích Tắc</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <!-- Header -->
    <header class="header-top">
        <div class="container">
            <div class="row align-items-center py-3">
                <div class="col-2">
                    <div class="table-info">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-chair text-danger me-2"></i>
                            <div>
                                <strong id="headerTableNumber" class="text-danger">--</strong>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-7">
                    <div class="search-box">
                        <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm món ăn...">
                        <i class="fas fa-search search-icon"></i>
                    </div>
                </div>
                <div class="col-3 text-end">
                    <a href="/Cart" class="btn btn-cart position-relative text-decoration-none">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="badge bg-danger cart-count">0</span>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Banner Slider -->
    <div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="2"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="banner-slide banner-1">
                    <div class="banner-content">
                        <h2>Giảm giá 30%</h2>
                        <p>Cho tất cả món ăn hôm nay</p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="banner-slide banner-2">
                    <div class="banner-content">
                        <h2>Món mới ra mắt</h2>
                        <p>Khám phá hương vị đặc biệt</p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="banner-slide banner-3">
                    <div class="banner-content">
                        <h2>Tặng thêm một nước</h2>
                        <p>Đơn hàng từ 200.000đ</p>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- Category Tabs - THÊM MỚI -->
<div class="category-tabs-container">
    <div class="container">
        <div class="category-tabs" id="categoryTabs">
            <!-- Tabs sẽ được render bởi JavaScript -->
        </div>
    </div>
</div>

    <!-- Menu Content -->
    <main class="container my-4 pb-5">
        <div id="menuContainer">
            <div class="text-center py-5">
                <div class="spinner-border text-danger" role="status">
                    <span class="visually-hidden">Đang tải...</span>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="fas fa-utensils"></i> Nhà Hàng Ngon</h5>
                    <p class="text-muted">Mang đến cho bạn những món ăn ngon nhất với chất lượng tốt nhất.</p>
                </div>
                <div class="col-md-4">
                    <h5>Liên hệ</h5>
                    <p class="text-muted mb-1"><i class="fas fa-phone"></i> 0123 456 789</p>
                    <p class="text-muted mb-1"><i class="fas fa-envelope"></i> contact@nhahangngon.vn</p>
                    <p class="text-muted"><i class="fas fa-map-marker-alt"></i> Hà Nội, Việt Nam</p>
                </div>
                <div class="col-md-4">
                    <h5>Giờ mở cửa</h5>
                    <p class="text-muted mb-1">Thứ 2 - Thứ 6: 8:00 - 22:00</p>
                    <p class="text-muted">Thứ 7 - CN: 7:00 - 23:00</p>
                </div>
            </div>
            <hr class="my-3">
            <div class="text-center text-muted">
                <p class="mb-0">© 2024 Nhà Hàng Ngon. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Mobile Bottom Nav -->
    <nav class="mobile-nav">
        <button class="nav-item active" onclick="window.location.href='/'">
            <i class="fas fa-home"></i>
            <span>Thực đơn</span>
        </button>
        <button class="nav-item" onclick="window.location.href='/Order'">
            <i class="fas fa-receipt"></i>
            <span>Đơn hàng</span>
        </button>
    </nav>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/menu.js"></script>
</body>
</html>